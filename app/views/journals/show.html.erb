<div class="ui centered card">
  <div class="content">
    <div class="header"><%= @journal.title %></div>
    <div class="meta">Made: <%= distance_of_time_in_words(@journal.created_at) %> ago</div>
    <div class="description">
      <p>
        <%= @journal.body %>
      </p>
    </div>
  </div>
  <div class="content">
    <p>Add some topics to make this post easier to find!</p>
    <%= render 'shared/topics_form', topicable: @journal %>
  </div>
</div>
