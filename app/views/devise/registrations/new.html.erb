<h2 class="ui center aligned header">Sign up</h2>

<div class="ui container">
  <div class="ui centered card">
    <div class="ui centered grid">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui form" }) do |f| %>
        <%= f.error_notification %>

        <div class="field sign-up">
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
        </div>
        <div class="field sign-up">
          <%= f.input :username,
                      required: true,
                      input_html: { autocomplete: "email" }%>
        </div>
        <div class="field sign-up">
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" }%>
        </div>
        <div class="field sign-up">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="field sign-up">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "positive ui button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
