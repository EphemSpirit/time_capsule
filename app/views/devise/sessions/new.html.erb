<h2 class="ui center aligned header">Log in</h2>

<div class="ui container">
  <div class="ui centered card">
    <div class="ui centered grid">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui form" }) do |f| %>
        <div class="field">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="field">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="field">
          <div type="checkbox" tabindex="0" class="hidden">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "positive ui button" %>
        </div>
      <% end %>
      <div class="four wide centered row">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
